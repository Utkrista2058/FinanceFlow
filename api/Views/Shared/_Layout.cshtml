<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SmartBudgetTracker</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header class="mb-3">
            <h1>Smart Budget Tracker</h1>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Income" asp-action="Index">Income</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Expenses" asp-action="Index">Expenses</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="BudgetGoal" asp-action="Index">Budget Goals</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="ExpenseCategory" asp-action="Index">Categories</a></li>
                </ul>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
